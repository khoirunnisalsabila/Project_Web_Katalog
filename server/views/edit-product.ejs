<html>
  <head>
    <title>Edit Product</title>
  </head>
  <body>
    <h1>Edit Product</h1>
    <form action="/admin/edit/<%= product.id %>" method="POST">
      <label for="name">Name:</label><br>
      <input type="text" id="name" name="name" value="<%= product.name %>" required><br><br>

      <label for="description">Description:</label><br>
      <input type="text" id="description" name="description" value="<%= product.description %>" required><br><br>

      <label for="price">Price:</label><br>
      <input type="number" id="price" name="price" value="<%= product.price %>" required><br><br>

      <label for="category">Category:</label><br>
      <input type="text" id="category" name="category" value="<%= product.category %>" required><br><br>

      <label for="image_url">Image URL:</label><br>
      <input type="text" id="image_url" name="image_url" value="<%= product.image_url %>" required><br><br>

      <input type="submit" value="Update Product">
    </form>
  </body>
</html>



